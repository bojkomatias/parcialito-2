<p id="notice"><%= notice %></p>

<h1>Users / Nurses</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nurse ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Cantidad de applicaciones</th>
  
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>  <%= user.id %><br/></td>
        <td>  <%= user.first_name %><br/></td>
        <td>  <%= user.last_name %><br/></td>
         <td><%= link_to user.appointments.count, appointments_path(:user_id => user.id)%></td>     
      </tr>
    <% end %>
  </tbody>
</table>

<br>

